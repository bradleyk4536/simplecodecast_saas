<section class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1 class="text-center">Create Profile</h1>
		<p class="text-center">Become part of community and fill out your profile</p>
		<div class="well">
			<%= form_for @profile, url: user_profile_path do |form| %>
				<div class="form-group">
					<%= form.label :first_name %>
					<%= form.text_field :first_name, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= form.label :last_name %>
					<%= form.text_field :last_name, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= form.label :job_title %>
					<%= form.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= form.label :phone_number %>
					<%= form.text_field :phone_number, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= form.label :contact_email %>
					<%= form.text_field :contact_email, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= form.label :description %>
					<%= form.text_area :desciption, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= form.submit "Update Profile", class: 'btn btn-primary' %>
				</div>
			<% end %>
		</div>

	</div>
</section>
